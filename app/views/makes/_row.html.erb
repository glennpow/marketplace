<%= render_row(
  indexer,
  make,
  [
    link_to_resource(make) + (is_editor_of?(make) ? ' (' + e(make.production_status, t(:unknown)) + ')' : ''),
    link_to_resource(make.manufacturer),
    is_editor_of?(make) ? h(make.models.length) : h(make.available_models.length),
    is_editor_of?(make) ? h(make.products.length) : h(make.available_products.length),
  ],
  :actions => is_editor_of?(make) ? [
    icon_link_to(:edit, t(:edit), edit_object_path(make)),
    icon_link_to(:delete, t(:delete), make, :confirm => t(:are_you_sure), :method => :delete)
  ] : nil) %>
