<%= render_row(
  indexer,
  price,
  [
    link_to_resource(price.product, :label_method => full_name),
    is_vendor? ? render_currency(price.amount) : render_price(price.product, price.vendor),
    link_to_resource(price.vendor),
    offer_icon(price.vendor, price.product)
  ],
  :actions => is_editor_of?(price) ? [
    icon_link_to(:edit, t(:edit), edit_vendor_price_path(price.vendor, price)),
    icon_link_to(:delete, t(:remove), price, :confirm => t(:are_you_sure), :method => :delete),
    icon_link_to(:money, t(:create_object, :object => t(:offer, :scope => [ :marketplace ])), new_vendor_offer_path(price.vendor, :for_product_id => price.product.id))
  ] : nil) %>
