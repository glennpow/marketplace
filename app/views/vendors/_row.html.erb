<%= render_row(
  indexer,
  vendor,
  [
    link_to_resource(vendor),
    vendor.moderators.map { |moderator| link_to_user(moderator) }.to_sentence,
  ],
  :actions => is_moderator_of?(vendor) ? [
    icon_link_to(:edit, t(:edit), edit_object_path(vendor)),
    icon_link_to(:delete, t(:delete), vendor, :confirm => t(:are_you_sure), :method => :delete)
  ] : nil) %>