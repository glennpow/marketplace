<%= render_heading(h(feature_type.name)) %>

<%= render_field(image_tag(feature_type.image.url)) %>

<% if feature_type.parent_feature_type %>
  <%= render_field(t(:parent_feature_type, :scope => [ :marketplace ]), link_to_resource(feature_type.parent_feature_type)) %>
<% end %>

<%= render_field(t(:allow_none, :scope => [ :marketplace, :features ]), yes_no(feature_type.allow_none?)) %>

<% unless feature_type.description.blank? %>
  <%= render_text_area(h(feature_type.description)) %>
<% end %>

<% if feature_type.child_feature_types.any? %>
  <%= render_field(tp(:child_feature_type, :scope => [ :marketplace ]), feature_type.child_feature_types.map { |child_feature_type| link_to_resource(child_feature_type) }) %>
<% end %>

<% if feature_type.features.any? %>
  <%= render_field(tp(:feature, :scope => [ :marketplace ]), feature_type.features.map { |feature| link_to_resource(feature) }) %>
<% end %>
