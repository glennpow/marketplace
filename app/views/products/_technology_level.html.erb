<table class="technology-level-table" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <% (1..technology_level).each do |i| %>
      <td style="padding: 0">
        <div class="technology-level-on"></div>
      </td>
    <% end %>
    <% (technology_level..4).each do |i| %>
      <td style="padding: 0">
        <div class="technology-level-off"></div>
      </td>
    <% end %>
  </tr>
</table>
