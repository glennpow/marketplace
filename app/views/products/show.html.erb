<% title h(@product.full_name) %>

<%= render :partial => 'show', :locals => { :product => @product } %>

<%= render_comments(@product) %>

<%= render_reviews(@product) %>

<% if is_editor_of?(@product) %>
  <% page_action icon_link_to(:edit, t(:edit_object, :object => t(:product, :scope => [ :marketplace ])), edit_product_path(@product)) %>
  <% page_action icon_link_to(:duplicate, t(:duplicate_object, :object => t(:product, :scope => [ :marketplace ])), new_model_product_path(@product.model, :duplicate_id => @product)) %>
<% end %>