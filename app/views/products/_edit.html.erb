<%= f.text_field :name, :required => true %>
  
<% if product.try(:image?) %>
  <%= image_tag product.image.url %>
<% end %>
 
<%= f.file_field :image %>

<%= f.text_field :sku, :required => true %>

<%= enumeration_select(f, :production_status) %>

<%= f.text_area :description, :preview => true, :hint => link_to_textile_hint %>

<% if product.valid_feature_types? %>
  <%= render_heading(tp(:feature, :scope => [ :marketplace ])) %>

  <%= feature_select(f, :features, :label => { :name => tp(:feature, :scope => [ :marketplace ]) }) %>
<% end %>