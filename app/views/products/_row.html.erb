<%= render_row(
  indexer,
  product,
  [
    link_to_resource(product),
    h(product.sku),
    link_to_resource(product.manufacturer),
    link_to_resource(product.make),
    link_to_resource(product.model),
  ],
  :actions => [
    is_editor_of?(product) ? [
      icon_link_to(:edit, t(:edit), edit_object_path(product)),
      icon_link_to(:delete, t(:delete), product, :confirm => t(:are_you_sure), :method => :delete)
    ] : nil,
    (is_vendor?(true) && !current_vendor.products.include?(product)) ?
      icon_link_to(:add, t(:add_to_inventory, :scope => [ :marketplace, :products ]), new_vendor_price_path(current_vendor, :for_product_id => product.id)) : nil
  ) %>