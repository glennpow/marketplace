<% if @product %>
  <% title t(:offers_for_object, :scope => [ :marketplace, :offers ], :count => @indexer.collection.total_entries, :object => @product.name) %>
<% elsif @offer_provider %>
  <% title t(:offers_from_object, :scope => [ :marketplace, :offers ], :count => @indexer.collection.total_entries, :object => @offer_provider.name) %>
<% end %>

<%= render_indexer(@indexer) %>

<% if is_editor_of?(@offer_provider) %>
  <% page_action icon_link_to(:add_large, t(:create_object, :object => t(:offer, :scope => [ :marketplace ])), new_object_path) %>
<% end %>
