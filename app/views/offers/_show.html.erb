<%= render_heading(h(offer.name), :actions => is_editor_of?(@offer) ? icon_link_to(:edit, t(:edit), edit_object_path, :with_label => true) : nil) %>
  
<%= render_field(t(:offer_provider, :scope => [ :marketplace ]), link_to_resource(offer.offer_provider)) %>

<%= render_field(tp(:date, :scope => [ :datetimes ]), "#{h(offer.starts_on.to_s(:long))} - #{h(offer.ends_on.to_s(:long))}") %>

<%= render_field(t(:offer, :scope => [ :marketplace ]), offer_amount(offer)) %>

<%= render_field(t(:type), e(offer.offer_type, t(:unknown))) %>
  
<%= render_text_area(offer.description) %>
  
<%= render_field(tp(:product, :scope => [ :marketplace ]),
  offer.products.map(&:full_name),
  :actions => is_editor_of?(offer) ? icon_link_to(:edit, t(:edit), edit_products_offer_path(offer)) : nil) %>
