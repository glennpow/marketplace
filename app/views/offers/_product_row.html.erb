<%= render_row(
  indexer,
  product,
  [
    link_to_resource(product),
    h(product.sku),
    link_to_resource(product.manufacturer),
    link_to_resource(product.make),
    link_to_resource(product.model),
  ],
  :actions => [
    is_editor_of?(product) ? [
      icon_link_to(:edit, t(:edit), edit_product_path(product)),
      icon_link_to(:delete, t(:delete), product, :confirm => t(:are_you_sure), :method => :delete)
    ] : nil,
    offer.products.include?(product) ?
      icon_link_to(:delete, t(:remove), update_products_offer_path(offer, :remove_product_ids => product.id), :method => :put) :
      icon_link_to(:add, t(:add), update_products_offer_path(offer, :add_product_ids => product.id), :method => :put)
  ] ) %>
