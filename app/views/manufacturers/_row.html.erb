<%= render_row(
  indexer,
  manufacturer,
  [
    link_to_resource(manufacturer),
    manufacturer.moderators.map { |moderator| link_to_user(moderator) }.to_sentence,
    h(manufacturer.available_makes.length),
    h(manufacturer.available_models.length),
    h(manufacturer.available_products.length),
  ],
  :actions => [
    { :if => is_moderator_of?(manufacturer), :allow => [
      icon_link_to(:edit, t(:edit), edit_object_path(manufacturer)),
      icon_link_to(:delete, t(:delete), manufacturer, :confirm => t(:are_you_sure), :method => :delete)
    ] } ]) %>
