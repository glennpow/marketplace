<%= render_row(
  indexer,
  manufacturer,
  [
    link_to_resource(manufacturer),
    manufacturer.moderators.map { |moderator| link_to_user(moderator) }.to_sentence,
    is_editor_of?(manufacturer) ? h(manufacturer.makes.length) : h(manufacturer.available_makes.length),
    is_editor_of?(manufacturer) ? h(manufacturer.models.length) : h(manufacturer.available_models.length),
    is_editor_of?(manufacturer) ? h(manufacturer.products.length) : h(manufacturer.available_products.length),
  ],
  :actions => is_moderator_of?(manufacturer) ? [
    icon_link_to(:edit, t(:edit), edit_manufacturer_path(manufacturer)),
    icon_link_to(:delete, t(:delete), manufacturer, :confirm => t(:are_you_sure), :method => :delete)
  ] : nil) %>
