<%= f.localization_select %>

<%= f.localized_text_field :name, :required => true %>

<% if model.try(:image?) %>
  <%= image_tag model.image.url %>
<% end %>
 
<%= f.file_field :image %>

<%= enumeration_select(f, :production_status) %>

<%= f.localized_text_area :description, :preview => true, :hint => link_to_textile_hint %>

<% if model.valid_features? %>
  <%= render_heading(tp(:feature, :scope => [ :marketplace ])) %>

  <%= feature_select(f, :features, :label => { :name => tp(:feature, :scope => [ :marketplace ]) }) %>
<% end %>