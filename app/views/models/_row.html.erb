<%= render_row(
  indexer,
  model,
  [
    link_to_resource(model),
    link_to_resource(model.manufacturer),
    link_to_resource(model.make),
    model.products.any? ? model.products.length : '',
  ],
  :actions => [
    { :if => is_editor_of?(model), :allow => [
      icon_link_to(:edit, t(:edit), edit_object_path(model)),
      icon_link_to(:delete, t(:delete), model, :confirm => t(:are_you_sure), :method => :delete)
    ] } ]) %>